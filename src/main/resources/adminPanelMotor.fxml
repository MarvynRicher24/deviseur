<VBox xmlns="http://javafx.com/javafx/20"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="fr.musclegarage.deviseur.ui.AdminPanelMotorController"
    stylesheets="@styles.css"
    styleClass="card"
    spacing="10"
    alignment="TOP_CENTER">

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
        style="-fx-background: #f2f2f2; -fx-padding: 10;">
        <VBox fx:id="listContainer" spacing="8" />
    </ScrollPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Ajouter" onAction="#onAdd" styleClass="button-primary" />
        <Button fx:id="btnSave" text="Enregistrer" onAction="#onSave" styleClass="button-primary"
            disable="true" />
    </HBox>
</VBox>